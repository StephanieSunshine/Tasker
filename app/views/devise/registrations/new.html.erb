
  <div class='container'>
    <div class='row'>
      <div class='col-lg-2'></div>
      <div class='col-lg-8'>
        <div class='jumbotron bg-primary'>
      <h2 class='display-4'>Join</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: 'col-form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-form-label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'col-form-label'%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Join", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
    </div>
    <div class='col-lg-2'></div>
    </div>
  </div>
</div>
